<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>EstoreMVC</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
    <servlet>
        <servlet-name>estoremvc</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
    	<description>
    	</description>
    	<display-name>EstoreUserServlet</display-name>
    	<servlet-name>EstoreUserServlet</servlet-name>
    	<servlet-class>com.estoremvc.controller.EstoreUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>estoremvc</servlet-name>
        <url-pattern>/welcome.jsp</url-pattern>
        <url-pattern>/welcome.html</url-pattern>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>EstoreUserServlet</servlet-name>
    	<url-pattern>/EstoreUserServlet</url-pattern>
    </servlet-mapping>
  
</web-app>
